<Project>
  <!--ライブラリ関連の設定 -->

  <PropertyGroup>
    <_IsGenerator>$(MSBuildProjectName.EndsWith('Generator'))</_IsGenerator>
    <_IsGeneratorInternal>$(MSBuildProjectName.EndsWith('Generator.Internal'))</_IsGeneratorInternal>
    <_IsDefaultLibrary Condition="'$(_IsGenerator)' != 'true' and '$(_IsGeneratorInternal)' != 'true'">true</_IsDefaultLibrary>
  </PropertyGroup>

  <Import Project="$(BuildCommonDirectory)/PolySharp.targets" />

  <Import Condition="'$(_IsGenerator)' == 'true'" Project="$(BuildCommonDirectory)/Generator.targets" />
  <Import Condition="'$(_IsGeneratorInternal)' == 'true'" Project="$(BuildCommonDirectory)/Generator.Internal.targets" />
  <Import Condition="'$(_IsDefaultLibrary)' == 'true'" Project="$(BuildCommonDirectory)/Library.Default.targets" />

</Project>
