<Project>
  <!--ライブラリ関連の設定 -->

  <PropertyGroup>
    <IsPackable>true</IsPackable>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <PropertyGroup Condition="$(MSBuildProjectName.EndsWith('Abstractions'))">
    <!-- ルート名前空間から「Abstractions」を取り除く。 -->
    <RootNamespace>$(MSBuildProjectName.Substring(0, $(MSBuildProjectName.LastIndexOf('.'))))</RootNamespace>
  </PropertyGroup>

  <Choose>

    <When Condition="$(MSBuildProjectName.EndsWith('Generator'))">
      <Import Project="$(BuildCommonDirectory)/Generator.targets" />
    </When>

    <When Condition="$(MSBuildProjectName.EndsWith('Generator.Internal'))">
      <Import Project="$(BuildCommonDirectory)/Generator.Internal.targets" />
    </When>

    <Otherwise>
      <Import Project="$(BuildCommonDirectory)/NuGet.targets" />
      <Import Project="$(BuildCommonDirectory)/Trimming.Analyzer.targets" />
    </Otherwise>

  </Choose>

</Project>
