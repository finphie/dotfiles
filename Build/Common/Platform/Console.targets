<Project>
  <!-- コンソールアプリケーション関連の設定 -->

  <PropertyGroup>
    <_IsBenchmark>$(MSBuildProjectName.EndsWith('Benchmarks'))</_IsBenchmark>
    <_IsDefaultConsole Condition="'$(_IsBenchmark)' != 'true'">true</_IsDefaultConsole>
  </PropertyGroup>

  <Import Condition="'$(_IsBenchmark)' == 'true'" Project="$(BuildCommonDirectory)/Benchmark.targets" />

  <ImportGroup Condition="'$(_IsDefaultConsole)' == 'true'">
    <Import Project="$(BuildCommonDirectory)/Tool.targets" />
    <Import Project="$(BuildCommonDirectory)/Console.Default.targets" />
  </ImportGroup>

</Project>
