<Project>
  <!-- コンソールアプリケーション関連の設定 -->

  <PropertyGroup>
    <_IsTool>$(MSBuildProjectName.EndsWith('Tool'))</_IsTool>
    <_IsBenchmark>$(MSBuildProjectName.EndsWith('Benchmarks'))</_IsBenchmark>
    <_IsDefaultConsole Condition="'$(_IsTool)' != 'true' and '$(_IsBenchmark)' != 'true'">true</_IsDefaultConsole>
  </PropertyGroup>

  <Import Condition="'$(_IsTool)' == 'true'" Project="$(BuildCommonDirectory)/Tool.targets" />
  <Import Condition="'$(_IsBenchmark)' == 'true'" Project="$(BuildCommonDirectory)/Benchmark.targets" />
  <Import Condition="'$(_IsDefaultConsole)' == 'true'" Project="$(BuildCommonDirectory)/Console.Default.targets" />

</Project>
