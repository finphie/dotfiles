<Project>
  <!-- 実行ファイル関連の設定 -->

  <Choose>

    <When Condition="'$(UseWinUI)' == 'true'">
      <Import Project="$(BuildCommonPlatformDirectory)/WinUI.targets" />
    </When>

    <When Condition="'$(UseWPF)' == 'true'">
      <Import Project="$(BuildCommonPlatformDirectory)/Wpf.targets" />
    </When>

    <When Condition="'$(UsingMicrosoftMauiSdk)' == 'true'">
      <Import Project="$(BuildCommonPlatformDirectory)/Maui.targets" />
    </When>

    <When Condition="'$(UseAvalonia)' == 'true'">
      <Import Project="$(BuildCommonPlatformDirectory)/Avalonia.targets" />
    </When>

    <When Condition="'$(UsingMicrosoftNETSdkWeb)' == 'true'">
      <Import Project="$(BuildCommonPlatformDirectory)/AspNet.targets" />
    </When>

    <When Condition="'$(UsingMicrosoftNETSdkBlazorWebAssembly)' == 'true'">
      <Import Project="$(BuildCommonPlatformDirectory)/BlazorWebAssembly.targets" />
    </When>

    <Otherwise>
      <Import Project="$(BuildCommonPlatformDirectory)/Console.targets" />
    </Otherwise>

  </Choose>

</Project>
