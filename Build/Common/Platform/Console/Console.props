<Project>
  <!-- コンソールアプリケーション関連の設定 -->

  <PropertyGroup>
    <_IsBenchmark>$(MSBuildProjectName.EndsWith('Benchmarks'))</_IsBenchmark>
    <_IsDefaultConsole Condition="'$(_IsBenchmark)' != 'true'">true</_IsDefaultConsole>
  </PropertyGroup>

  <Import Condition="'$(_IsBenchmark)' == 'true'" Project="$(MSBuildThisFileDirectory)Benchmark.props" />

  <ImportGroup Condition="'$(_IsDefaultConsole)' == 'true'">
    <Import Project="$(MSBuildThisFileDirectory)Tool.props" />
    <Import Project="$(MSBuildThisFileDirectory)Console.Default.props" />
  </ImportGroup>

</Project>
